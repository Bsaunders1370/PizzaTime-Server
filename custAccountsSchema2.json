{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [ "accountId", "username", "password" ],
    "additionalProperties": false,
    "properties": {
        "accountId": { "type": "integer" },
        "username": { "type": "string", "minLength": 3, "maxLength": 20, "pattern": "^[\\w\\.,']*$" },
        "password": { "type": "string", "minLength": 8, "maxLength": 20, "pattern": "^\\w([\\w!@#$%]*)$" },
        "contacts": {
            "type": "array",
            "minItems": 1,
            "maxItems": 20,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [ "firstName", "lastName", "phone" ],
                "additionalProperties": false,
                "properties": {
                    "firstName": { "type": "string", "maxLength": 30, "pattern": "^[\\w \\.,']*$" },
                    "lastName": { "type": "string", "maxLength": 30, "pattern": "^[\\w \\.,']*$" },
                    "phone": { "type": "string", "maxLength": 15, "pattern": "1?\\W*([2-9][0-8][0-9])\\W*([2-9][0-9]{2})\\W*([0-9]{4})(\\se?x?t?(\\d*))?" },
                    "email": { "type": "string", "maxLength": 50, "format": "email" }
                }
            }
        },
        "addresses": {
            "type": "array",
            "minItems": 0,
            "maxItems": 20,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [ "street1", "city", "state", "zip" ],
                "additionalProperties": false,
                "properties": {
                    "street1": { "type": "string", "maxLength": 50, "pattern": "(\\w \\.,')*" },
                    "street2": { "type": "string", "maxLength": 50, "pattern": "(\\w \\.,')*" },
                    "city": { "type": "string", "maxLength": 50, "pattern": "(\\w \\.')*" },
                    "state": { "type": "string", "maxLength": 15, "pattern": "(\\w \\.)*" },
                    "zip": { "type": "string", "maxLength": 15, "pattern": "^(?!00000)(?<zip>(?<zip5>\\d{5})(?:[ -](?=\\d))?(?<zip4>\\d{4})?)$" }
                }
            }
        },
        "paymentMethods": {
            "type": "array",
            "minItems": 0,
            "maxItems": 30,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [],
                "additionalProperties": false,
                "properties": {

                }
            }
        }
    }
}
